# Configuración del servidor
PORT=5000

# Configuración de la base de datos
DB_HOST=localhost
DB_USER=usuario_db
DB_PASS=contraseña_db
DB_NAME=boletines_db
DB_PORT=3306

# Entorno de desarrollo
NODE_ENV=development

# Configuración JWT
JWT_SECRET=tu_clave_secreta_jwt
API_URL=http://localhost:5000/api

# Configuración de API Newscatcher
REACT_APP_NEWSCATCHER_API_URL=https://api.newscatcherapi.com/v2
REACT_APP_NEWSCATCHER_API_KEY=tu_clave_api_newscatcher_aqui

# Configuración de tiempos de caché (en milisegundos)
REACT_APP_CACHE_DEFAULT_TTL=300000  # 5 minutos
REACT_APP_CACHE_SEARCH_TTL=120000   # 2 minutos
REACT_APP_CACHE_STATIC_TTL=3600000  # 1 hora

# Configuración de reintentos
REACT_APP_MAX_RETRIES=3
REACT_APP_RETRY_DELAY=1000  # 1 segundo
